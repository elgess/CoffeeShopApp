<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemActivity"
    android:orientation="vertical"
    android:background="@color/color_app_backgoroud">

    <ImageView
        android:id="@+id/ai_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@color/black"
        android:src="@drawable/item_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/liner_ai1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ai_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="24dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Coffee Test #1"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/ai_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textStyle="normal"
                android:text="1000g"
                android:paddingBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignBottom="@id/liner_ai1"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/ai_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="inherit"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="$ 1000"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="20dp"/>

                <TextView
                    android:id="@+id/ai_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="20dp"
                    android:textAlignment="textEnd"
                    android:textStyle="italic"
                    android:text="Available"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="20dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/ai_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textAlignment="inherit"
                android:textSize="20dp"
                android:textStyle="normal"
                android:text="Test description test description test description test description test description test description test description test description"
                android:paddingVertical="4dp"
                android:paddingHorizontal="20dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>